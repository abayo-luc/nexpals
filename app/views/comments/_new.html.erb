<div class="container-fluid">
  <%= form_for(@comment, url: comments_new_path) do |f| %>
    <div class="form-group">
     <label for="inputEmail" class="col-lg-2 control-label">Name</label>
     <div class="col-lg-10">
       <%=  f.text_field :name, class: "form-control", style: "width: 300px;"%><br>
     </div>
    </div>

    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
      <br>
       <%=  f.text_field :email, class: "form-control", style: "width: 300px;"%><br>
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Comment</label>
      <div class="col-lg-10">
       <%=  f.text_area :body, class: "form-control", style: "width: 300px;"%><br>
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Web</label>
      <div class="col-lg-10">
       <%=  f.text_field :web, class: "form-control", style: "width: 300px;"%><br>
      </div>
    </div>

    <%= f.hidden_field :post_id, value: @post.id  %>

    <div class="form-group">
     <div class="col-lg-10 col-lg-offset-2">
       <%= f.submit "Submit", class: "btn btn-primary" %>
     </div>
    </div>
  <% end %>
</div>
