<!DOCTYPE html>
<html>
<head>
  <title>NextPals Posts</title>
</head>
<body>
  <%= form_for @post do |f| %>
  <% if @post.errors.any? %>
  <div class="errors">
   <h2><%= pluralize(@post.errors.count, "error") %>Prevented this post from saving</h2>
   <ul><%= @post.errors.full_messages do |message| %>
     <li><%= message %></li>
     <% end %>
   </ul>
  </div>
  <% end  %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :intro %>
      <%= f.text_area :intro %>
    </p>
    <p>
      <%= f.label :body %>
      <%= f.text_area :body %>
    </p>
      <p>
        <%= f.submit %>
      </p>
      <% end %>
</body>
</html>