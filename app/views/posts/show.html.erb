<!DOCTYPE html>
<html>
  <head>
    <title>Newletter</title>
  </head>
  <body>
    <div class="container">
      <h3 class="title">
        <%= @post.title %>
      </h3>
      <p class="date">
      <%= Time.at(@post.created_at).strftime("%B %e, %Y") %>
      | <%= link_to 'Edit', edit_post_path(@post) %>
      | <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %>
      </p>
      <div class="row"></div>
        <div class="col-md-10">
          <%= @post.intro %>
        <hr>
          <p class="body">
            <%= @post.body %>
          </p>
  
        </div>
    </div>

  </body>
</html>

