<!DOCTYPE html>
<html>
  <head>
    <title>Newletter</title>
  </head>
  <body>
    <div class="container">
      <h3 class="title" style="font-family: cursive; font-size: 20px;">
        <%= @post.title %>
      </h3>
      <p class="date">
      <%= Time.at(@post.created_at).strftime("%B %e, %Y") %>
      <% if current_admin %>
      | <%= link_to 'Edit', edit_post_path(@post) %>
      | <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %>
      <% end %>
      |Tags: <%= raw tag_links(@post.all_tags) %>

       <span class="glyphicon glyphicon-comment" aria-hidden="true" style="padding-left:30px; font-size:30px;" title="comment"><%= @post.comments.count %></span>

        <!-- <span style="padding-left: 30px;"><%#= "#{@post.impressionist_count} views so far!" %></span> -->
       
      <div class="row"></div>
        <div class="col-md-10">
        <p style="font-family: cursive; font-style: italic; font-size: 12px;">
          <%= @post.intro %>
          
        
        </p>
        <hr>
          <p class="body">
            <%= @post.body.html_safe %>
          </p>
          <hr>
          <%= social_share_button_tag("#{@post.title}") %>
          <hr>

          <%= render "comments/form" %>
  
        </div>
    </div>

  </body>
</html>

