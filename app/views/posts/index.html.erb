<div class="container-fluid">
<div class="row">
  
  <!-- Carousel -->
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" >
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-example-generic" data-slide-to="1"></li>
      <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox" style="width: 100%; height: 350px">
      <div class="item active">
        <img src="#" alt="...">
      </div>

      <div class="item">
        <img src="#" class ="img-responsive" alt="...">
        <div class="carousel-caption">

        </div>

      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <!-- List of Posts -->
  <br>
  <div class="col-md-2" style="margin: 30px;">

    <h2 class="text-center">Filter</h2>
    <hr>
    <div class="text-center">
      <a href="" style="color: #008080;">This week</a> <br> <hr>
      <a href="" style="color: #008080;">Technology</a> <br> <hr>
      <a href="" style="color: #008080;">Coding</a> <br> <hr>
      <a href="" style="color: #008080;">NexPals</a> <br> <hr>
    </div>

  </div>

  

  <div class="col-md-6" style="margin: 30px; margin-left: 0px;">
    <div class="row">

      <div class="text-center">
        <button href="" class="w3-button w3-round-xlarge" style="border-radius: 10px; background-color: #008080; height: 40px; color: white;">New Post</button>
      </div>
      <br>

         <!-- first box -->
         <% @posts.each do |post| %>

         <div class="thumbnail">

          <div class="col-xs-12 col-sm-3">
            <img src="http://img.timeinc.net/time/daily/2010/1011/poy_nomination_agassi.jpg" alt="first image" class="img-responsive" style="height: 200px; width: auto; float: center;" />

          <div class="text-center">
            <button href="" class="w3-button w3-round-xlarge" style="border-radius: 10px; background-color: #008080; height: 40px; color: white;">Edit</button>
            <button href="" class="w3-button w3-round-xlarge" style="border-radius: 10px; background-color: #7e1f25; height: 40px; color: white;">Delete</button>
          </div>
          </div>


          <div class="col-xs-12 col-sm-9 text-center">

            <a href="/show" class="name" style="color: #008080;"> <b> <%= link_to post.title, post%> </b></a>  
            <hr>
            <p> <%= truncate post.intro.html_safe, length: 350%> | <%= link_to 'Read More', post %></p>

            <br>
            <p style="text-align: right; font-size: 11px;"> <%= post.created_at.strftime("%B, %d, %Y") %></p>

          </div>
          <div class="clearfix"></div>

        </div>
        <% end %>


    </div>
  </div>

  <!-- media feeds -->
  <div class="col-md-2 col-xs-12 thumbnail" 
  style="
  background-color: #B0C4DE;
  box-shadow: 10px 10px 5px grey;
  margin-top: 90px;
  margin-left: 15px;
  width: 300px;">

    <a href="https://twitter.com/luc_wizz" class="twitter-follow-button" data-show-count="false">Follow @luc_wizz</a><script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
      <a class="twitter-timeline"  data-height="500" data-link-color="#2B7BB9" href="https://twitter.com/luc_wizz">Tweets by luc_wizz</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script> 

  </div> 


</div>

</div>

