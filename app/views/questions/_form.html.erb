
<%= form_tag "/questions", class: "navbar-form", method: :post do %>
  <div class="form-group">
    <input type="text" class="form-control" placeholder="name ..." name="name" style='width: 200px; margin-left: 5px; margin-top: 10px; border-radius: 10%;'>
  </div>


  <div class="form-group">
    <input type="text" class="form-control" placeholder="email ..." name="email" style='width: 200px; margin-left: 5px; margin-top: 10px; border-radius: 10%;'>
  </div>

  <div class="form-group">
    <input type="text" class="form-control" placeholder="phone ..." name="phone" style='width: 200px; margin-left: 5px; margin-top: 10px; border-radius: 10%;'>
  </div>


  <div class="form-group">
    <input type="text" class="form-control" placeholder="company website ..." name="web" style='width: 200px; margin-left: 5px; margin-top: 10px; border-radius: 10%;'>
  </div>

  <div class="form-group">
    <textarea type="text" class="form-control" name="body" style='width: 410px; margin-left: 5px; margin-top: 10px; border-radius: 10%;' placeholder="type your message ..."></textarea>
  </div>
  
  <div class="text-center">
    <button type="submit" class="w3-button w3-round-xlarge" style="border-radius: 50px; background-color: #008080;">Send</button>
  </div>

<% end %> 
